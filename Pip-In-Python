import camelcase

c = camelcase.CamelCase()

txt = "hello world"

print(c.hump(txt))  #     Hello World

import camelcase

c = camelcase.CamelCase()

txt = "lorem ipsum dolor sit amet"

print(c.hump(txt))    #     Lorem Ipsum Dolor Sit Amet

#This method capitalizes the first letter of each word.
