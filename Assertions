def square(x):
    #return x**x
    return x*x

assert square(2)==4,'The square of 2 should be 4'
assert square(3)==9,'The square of 3 should be 9'
assert square(4)==16,'The square of 4 should be 16'
print(square(2))
print(square(3))
print(square(4))
